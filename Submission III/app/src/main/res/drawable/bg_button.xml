<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
    <item android:state_pressed="true" android:top="3dp" android:left="3dp"  >
        <shape>
            <solid android:color="#E2D6D6D6" />
            <corners android:radius="5dp" />

        </shape>
    </item>
    <item    android:bottom="3dp"   android:right="3dp" >
        <shape>
            <gradient android:angle="135" android:endColor="#E4E2E2E2" android:startColor="@color/blue_semi"/>
            <solid android:color="@color/blue_semi" />
            <stroke android:width="1dp" android:color="@color/blue_stroke"/>
            <corners android:radius="5dp" />
            <padding android:bottom="5dp" android:right="5dp"  android:left="5dp" android:top="5dp" />
        </shape>
    </item>
        </layer-list>
    </item>
</selector>