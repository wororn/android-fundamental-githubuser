    </style>

    <style name="text_content3.about_email">
        <item name="android:layout_marginStart">122dp</item>
        <item name="android:layout_marginEnd">123dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:text">a195r4154@dicoding.org</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/blue_more_dark</item>
    </style>
<style name="cardView">
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:src">@drawable/bg_card_view </item>
</style>

